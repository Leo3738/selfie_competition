<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item>
        <shape>
            <!-- shadow-->
            <stroke
                android:width="2dp"
                android:color="#7000" />
            <padding
                android:bottom="1dp"
                android:left="-1dp"
                android:right="12dp"
                android:top="-1dp" />
        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <solid android:color="@color/splashTitle" />
        </shape>
    </item>

</layer-list>